<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="265dp"
            android:layout_height="49dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView">
        <Button
                android:text="@string/button_label_inc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="339dp"
                tools:layout_editor_absoluteX="16dp" android:id="@+id/button"
                style="@android:style/Widget.DeviceDefault.Button.Borderless" android:onClick="onIncrement"/>
        <Button
                android:text="@string/button_label_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="339dp"
                tools:layout_editor_absoluteX="127dp" android:id="@+id/button3"
                style="@android:style/Widget.DeviceDefault.Button.Borderless" android:onClick="onReset"/>
        <Button
                android:text="@string/button_label_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="339dp"
                tools:layout_editor_absoluteX="262dp" android:id="@+id/button2"
                style="@android:style/Widget.DeviceDefault.Button.Borderless" android:onClick="onDecrement"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>